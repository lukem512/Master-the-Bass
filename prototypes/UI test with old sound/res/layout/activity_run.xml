<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sound_wave" >

      
    <Button
        android:id="@+id/btnSoundCtrl"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/button_custom"
        android:text="@string/soundon"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor= "#000000"
        android:shadowDx= "1.2"
        android:shadowDy= "2"
        android:shadowRadius= "3"
        android:onClick="btnSoundCtrlClick" />

   
     <Button
         android:id="@+id/btnSoundStop"
         android:layout_width="160dp"
         android:layout_height="60dp"
         android:layout_alignLeft="@+id/btnSoundCtrl"
         android:layout_below="@+id/btnSoundCtrl"
         android:layout_marginTop="68dp"
         android:background="@drawable/button_custom"
         android:shadowColor="#000000"
         android:shadowDx="1.2"
         android:shadowDy="2"
         android:shadowRadius="3"
         android:text="@string/sound_stop"
         android:textColor="#FFFFFF"
         android:textSize="25sp"
         android:textStyle="bold"
         android:onClick="btnSoundStopClick"  />

</RelativeLayout>
