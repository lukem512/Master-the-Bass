<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masterthebass"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/mb_icon"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.NoTitleBar">
        <activity
            android:name="com.masterthebass.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        	android:name="com.masterthebass.Help"
        	android:parentActivityName="com.masterthebass.MainActivity" >
        </activity>
        <activity
            android:name="com.masterthebass.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.uitest.MainActivity" />
        </activity>
        
        <activity
            android:name="com.masterthebass.Gesturelist"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.listV" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.masterthebass.Filterlist"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.listV2" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.masterthebass.FiltersMenu"
            android:label="@string/title_activity_filters" 
        >
        </activity>
        
        
    </application>

</manifest>