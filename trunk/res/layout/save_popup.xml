<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/save_popup"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#444444"
    android:padding="10dp"
    android:screenOrientation="portrait" >
    
     <TextView
         android:id="@+id/recording_save_text"
         android:layout_width="103dp"
         android:layout_height="80dp"
         android:layout_gravity="center_vertical"
         android:text="Do you want to save this recording?" >

     </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom" >

        <Button
            android:id="@+id/btnSaveYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:onClick="btnSaveYesClick" />

        <Button
            android:id="@+id/btnSaveNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:onClick="btnSaveNoClick" />
    </LinearLayout>

</LinearLayout>
