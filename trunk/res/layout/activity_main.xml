<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:screenOrientation="portrait" >

    <Button
        android:id="@+id/buttonrecord"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/selector_record" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/buttonplay"
        android:background="@drawable/selector_settings"
        android:onClick="startSettings" />

    <Button
        android:id="@+id/buttonplay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/selector_help"
        android:onClick="toggleplayonoff" />

    <ToggleButton
        android:id="@+id/filter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnSettings"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_toggle"
        android:onClick="filterTopLeft" />

    <ToggleButton
        android:id="@+id/filter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_toggle"
        android:onClick="filterBottomRight" />

    <ToggleButton
        android:id="@+id/filter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/filter4"
        android:background="@drawable/selector_toggle"
        android:onClick="filterBottomLeft" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/filter1"
        android:layout_centerHorizontal="true" >

        <ToggleButton
            android:id="@+id/filter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_toggle"
            android:onClick="filterTopRight" />
    </LinearLayout>

</RelativeLayout>
